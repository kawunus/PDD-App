<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleTextView" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/inter_font</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SectionTitleTextView" parent="TitleTextView">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="SectionCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="cardCornerRadius">16dp</item>
    </style>

    <style name="SubtitleTextView" parent="SectionTitleTextView">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SectionButton" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SectionImageView">
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">17dp</item>
    </style>
</resources>